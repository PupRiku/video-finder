{
  "name": "vid-finder",
  "version": "1.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "next dev",
    "build": "next build",
    "lint": "next lint",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && npm run start\"",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "electron-store": "^11.0.2",
    "next": "^15.5.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-tooltip": "^5.29.1",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/node": "^24.6.2",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.2.1",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.37.0",
    "eslint-config-next": "^15.5.4",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.example.vidfinder",
    "productName": "AI Video Finder",
    "files": [
      "out/**/*",
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/app.exe",
        "to": "backend/app.exe"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false
    },
    "win": {
      "icon": "build/icon.ico"
    }
  }
}
